@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>addUsers</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <h1 style="text-align:center">Add Employee</h1><br />
            <div class="col-md-12 col-md-offset-3">
                <div class="col-lg-6">
                    @using (Html.BeginForm("AddingUsers", "ItAdminHome", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <table class="table table-striped table-hover">
                                <tbody>
                                    <tr>
                                        <td><strong>Employee Name</strong></td>
                                        <td>
                                            <input type="text" id="nameID" name="Name" class="form-control" placeholder="Enter Name"
                                                   pattern="^[a-zA-Z ]*$" title="Alphabet and Space Only" required>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Employee Email</strong></td>
                                        <td>
                                            <input type="email" id="mailID" name="email" class="form-control"
                                                   placeholder="Enter Email" required>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td><strong>Password</strong></td>
                                        <td>
                                            <input type="password" id="passId" name="pass" class="form-control"
                                                   placeholder="Password" disabled>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td><strong>Status</strong></td>
                                        <td>
                                            <input type="radio" name="status" value="Active"> Active<br>
                                            <input type="radio" name="status" value="Inactive"> Inactive<br>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td><strong>designation</strong></td>
                                        <td>
                                            <select name="desig" class="form-control">
                                                <option value="2">Project Manager</option>
                                                <option value="3">Team Lead</option>
                                                <option value="4">Developer</option>
                                                <option value="5">QA Engineer</option>
                                                <option value="6">UX Engineer</option>
                                            </select>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td></td>
                                        <td align="right"><input type="submit" class="btn btn-primary" id="btnSubmit" name="AddBtn" value="Add"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>

            <div class="col-md-4" style="text-align:left">
                <a href="/ItAdminHome/Index/">
                    Back to Home
                </a>
            </div>
            <div class="col-md-4"></div>
            <div class="col-md-4" style="text-align:right">
                <p>
                    @Html.ActionLink("Show User", "showUsers")
                </p>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="~/Script/bootstrap.min.js"></script>
    <script src="~/Script/npm.js"></script>

    <script>
        $(document).ready(function () {
            $("#mailID").keyup(function () {
                $("#passId").val($(this).val()+ "123");
            });
        });
    </script>
</body>
</html>
