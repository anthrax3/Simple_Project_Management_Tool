@model Entity.User_Info

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>  
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#"><span class="glyphicon glyphicon-user"></span> @ViewBag.userTypeName</a></li>
                <li>
                    <a href="/Login/LogOut/"><span class="glyphicon glyphicon-log-out"></span> Log Out</a>
                </li>

            </ul>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <h1 style="text-align:center">Add Employee</h1><br />
            <div class="col-md-12 col-md-offset-3">
                <div class="col-lg-6">
                    @using (Html.BeginForm("UpdatingUser", "ItAdminHome"))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                <table class="table table-striped table-hover">
                                    <tbody>
                                        <tr>
                                            <td><strong>Employee Name</strong></td>
                                            <td>
                                                <input type="hidden" name="id" value="@Html.DisplayFor(model => model.Id)"/>
                                                <input type="text" id="nameID" name="Name" class="form-control" placeholder="Enter Name"
                                                        pattern="^[a-zA-Z ]*$" title="Alphabet and Space Only" 
                                                       value="@Html.DisplayFor(model => model.Name)" required>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Employee Email</strong></td>
                                            <td>
                                                <input type="email" id="mailID" name="email" class="form-control"
                                                        value="@Html.DisplayFor(model => model.Email)" disabled>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Status</strong></td>
                                            <td>
                                                <input type="text" id="statusId" name="status" class="form-control"
                                                        value="@Html.DisplayFor(model => model.Status)" disabled>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td><strong>designation</strong></td>
                                            <td>
                                                <input type="text" id="desigId" name="desig" class="form-control"
                                                        value="@Html.DisplayFor(model => model.Designation)" disabled>
                                            </td>
                                        </tr>

                                        <tr>
                                            <td></td>
                                            <td align="right"><input type="submit" class="btn btn-primary" id="btnSubmit" 
                                                                     name="editBtn" value="Edit"></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        }
                </div>
            </div>

            <div class="col-md-4" style="text-align:left">
                <a href="/ItAdminHome/Index/">
                    Back to Home
                </a>
            </div>
            <div class="col-md-4"></div>
            <div class="col-md-4" style="text-align:right">
                <p>
                    @Html.ActionLink("Show User", "showUsers")
                </p>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/Script/bootstrap.min.js"></script>
    <script src="~/Script/npm.js"></script>
</body>
</html>
