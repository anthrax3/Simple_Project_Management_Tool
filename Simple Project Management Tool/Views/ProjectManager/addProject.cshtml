@model Entity.Project_Info

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>addProject</title>

    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />

</head>
<body>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
           
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#"><span class="glyphicon glyphicon-user"></span> @ViewBag.userTypeName</a></li>
                <li>
                    <a href="/Login/LogOut/"><span class="glyphicon glyphicon-log-out"></span> Log Out</a>
                </li>

            </ul>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <h1 style="text-align:center">Add Employee</h1><br />
            <div class="col-md-12 col-md-offset-3">
                <div class="col-lg-6">
                    @using (Html.BeginForm("addIngProject", "ProjectManager", FormMethod.Post, new { enctype = "multipart/form-data", id = "form"}))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <table class="table table-striped table-hover">
                                <tbody>
                                    <tr>
                                        <td><strong>Project Name</strong></td>
                                        <td>
                                            <input type="text" id="nameID" name="Name" class="form-control" placeholder="Enter Name"
                                                   pattern="^[a-zA-Z ]*$" title="Alphabet and Space Only" required>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Code Name</strong></td>
                                        <td>
                                            <input type="text" id="codeID" name="codeName" class="form-control"
                                                   placeholder="Enter Code Name" required>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td><strong>Description</strong></td>
                                        <td>
                                            <textarea name="description" class="form-control" placeholder="Description"></textarea>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td><strong>Start Date</strong></td>
                                        <td>
                                            <input type="date" id="startdateId" name="startDate" class="form-control" required><br>
                                           
                                        </td>
                                    </tr>

                                    <tr>
                                        <td><strong>End Date</strong></td>
                                        <td>
                                            <input type="date" id="enddateId" name="endDate" class="form-control" required><br>

                                        </td>
                                    </tr>

                                    <tr>
                                        <td><strong>Status</strong></td>
                                        <td>
                                            <input type="radio" name="status" value="Active"> Active<br>
                                            <input type="radio" name="status" value="Inactive"> Inactive<br>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td><strong>Upload File</strong></td>
                                        <td>
                                            <input type="file" name="fileUpload" class="form-control"><br>

                                        </td>
                                    </tr>

                                    <tr>
                                        <td></td>
                                        <td align="right"><input type="submit" class="btn btn-primary" id="btnSubmit" name="AddBtn" value="Add"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>

            <div class="col-md-4" style="text-align:left">
                <a href="/ItAdminHome/Index/">
                    Back to Home
                </a>
            </div>
            <div class="col-md-4"></div>
            <div class="col-md-4" style="text-align:right">
                <p>
                    @Html.ActionLink("Show User", "showUsers")
                </p>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="~/Script/bootstrap.min.js"></script>
    <script src="~/Script/npm.js"></script>
    
    <script>
        $(document).ready(function () {
            $("#btnSubmit").click(function () {
                if ($("#startdateId").val() > $("#enddateId").val())
                {
                    alert("wrong");
                    $("#form").submit(function (e) {
                        return false;
                    });
                }
                else {
                    $("#form").submit(function (e) {
                        return true;
                    });
                }
            });
        });
    </script>
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
