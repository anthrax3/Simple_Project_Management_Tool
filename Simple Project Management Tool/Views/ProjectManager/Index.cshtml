@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/ItAdminHome/Index"><span class="glyphicon glyphicon-home fa-2x"></span></a>
            </div>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#"><span class="glyphicon glyphicon-user"></span> @ViewBag.userTypeName</a></li>
                <li>
                    <a href="/Login/LogOut/"><span class="glyphicon glyphicon-log-out"></span> Log Out</a>
                </li>

            </ul>
        </div>
    </nav>

    <h1 style="text-align:center">Welcome @ViewBag.userTypeName</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <strong>Options</strong>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped">
                            <tr>
                                <td align="center"><a href="/ProjectManager/showProject/"><strong>View Projects</strong></a></td>
                            </tr>
                            <tr>
                                <td align="center"><a href="/ProjectManager/addProject/"><strong>Add Project</strong></a></td>
                            </tr>
                            <tr>
                                <td align="center"><a href="/ProjectManager/ViewAssignedUser/"><strong>Assigne List of Projects</strong></a></td>
                            </tr>
                            <tr>
                                <td align="center"><a href="/ProjectManager/AssignUser/"><strong>Assign User to a Project</strong></a></td>
                            </tr>
                            <tr>
                                <td align="center"><a href="/ProjectManager/"><strong>Add Task</strong></a></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="~/Script/bootstrap.min.js"></script>
    <script src="~/Script/npm.js"></script>
</body>
</html>

